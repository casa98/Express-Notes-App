<div class="row">
    {{#each notes}}
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title d-flex justify-content-between align-items-center">
                        {{title}}
                        <a href="#">
                            <span class="material-icons">create</span>
                            <!--<i class="fas fa-edit"></i>-->
                        </a>
                    </h4>
                    <p>
                        {{description}}
                    </p>
                    <button class="btn btn-danger btn-block btn-sm">
                        Delete
                    </button>
                </div>
            </div>
        </div>
    {{else}}       <!-- If no Notes found: -->
    <div class="card mx-auto">
        <div class="card-body">
            <p>No notes found yet, but...</p>
            <a href="/notes/add" class="btn btn-block btn-success">Create one!</a>
        </div>
    </div>
    {{/each}}
</div>


