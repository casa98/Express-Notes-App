<div class="col-md-4 mx-auto">
    <div class="card">
        <div class="card-header">
            <h3>Edit note</h3>
            <div class="card-body">
                <form action="/notes/edit-note/{{note._id}}?_method=PUT" method="POST"> <!-- The query is for sending it as PUT, not POST -->
                    <input type="hidden", name="_method", value="PUT">   <!-- The magic line. Updating is PUT method-->
                    <div class="form-group">
                        <input type="text" class="form-control" name="title" value="{{note.title}}">
                    </div>
                    <div class="form-group">
                        <textarea name="description" class="form-control" >{{note.description}}</textarea>
                    </div>
                    <button class="btn btn-primary btn-block" type="submit">
                        Save
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>