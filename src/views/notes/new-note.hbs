<div class="col-md-6 mx-auto">
    <div class="card">
        <div class="card-header">
            <h1>New note</h1>
            <div class="card-body">
                <form action="/notes/new-note" method="POST">
                    <div class="form-group">
                        <input name="title" type="text" placeholder="Note title" class="form-control" autofocus>
                    </div>
                    <div class="form-group">
                        <textarea name="description" id="" rows="5" placeholder="Description" class="form-control"></textarea>
                    </div>
                    <div class="form-group">
                        <button class="btn btn-primary btn-block" type="submit">
                            Save
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>